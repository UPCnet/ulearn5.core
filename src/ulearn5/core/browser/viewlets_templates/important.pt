<div i18n:domain="ulearn" id="toggle-important">
    <div>Destacada</div>
    <div tal:condition="not:view/isNewImportant">
        <div tal:condition="not:view/isNewImportant">
            <label class="switch">
                <input type="checkbox">
                <div class="sliderbutton round" tal:attributes="data-dextobject context/absolute_url">
                </div>
            </label>
        </div>
    </div>
    <div tal:condition="view/isNewImportant">
        <div tal:condition="view/isNewImportant">
            <label class="switch">
                <input type="checkbox" checked>
                <div class="sliderbutton round" tal:attributes="data-dextobject context/absolute_url">
                </div>
            </label>
        </div>
    </div>
</div>